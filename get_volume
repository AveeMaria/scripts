#!/bin/sh

#visual volume status representation script for slstatus

vol=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ 2>/dev/null)

volperc=$(echo "$vol" | awk '{printf "%.0f", $2 * 100}')

if [[ $volperc == 100 ]]; then
  if echo "$vol" | grep -q MUTED; then
      echo "ðŸ”‡$volperc%"
  else
      echo "ðŸ”Š$volperc%"
  fi
else
  if echo "$vol" | grep -q MUTED; then
      echo "ðŸ”‡ $volperc%"
  else
      echo "ðŸ”Š $volperc%"
  fi
fi